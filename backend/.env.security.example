# Security Configuration
# Copy this to your .env file and update the values

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-64-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-64-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Encryption
DB_ENCRYPTION_KEY=your-database-encryption-key-here-32-characters-minimum

# Session Security
SESSION_SECRET=your-session-secret-key-here-minimum-32-characters-long

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-super-secure-admin-password-here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_UPLOAD_MAX=10
RATE_LIMIT_ADMIN_MAX=100

# CORS Security
CORS_ORIGIN=http://localhost:5174,https://your-domain.com
CORS_CREDENTIALS=true

# Security Monitoring
SECURITY_WEBHOOK_URL=https://your-webhook-url-for-alerts.com
SECURITY_EMAIL_ALERTS=admin@your-domain.com
SECURITY_LOG_LEVEL=info

# IP Blocking
AUTO_BLOCK_THRESHOLD=100
BLOCK_DURATION_HOURS=24

# File Upload Security
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Two-Factor Authentication
TOTP_ISSUER=CrackZone
TOTP_WINDOW=2

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_SALT_ROUNDS=12

# Brute Force Protection
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PROGRESSIVE_DELAY=true

# Database Security
DB_QUERY_TIMEOUT=30000
DB_IDLE_TIMEOUT=60000
DB_CONNECTION_LIMIT=20

# Logging
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=10
LOG_MAX_FILES=10

# SSL/TLS (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
FORCE_HTTPS=true

# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/security/csp-report
CSP_REPORT_ONLY=false

# Additional Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# API Security
API_KEY_EXPIRY_DAYS=90
API_RATE_LIMIT_PER_KEY=10000

# Backup Security
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_VERIFICATION_INTERVAL=24