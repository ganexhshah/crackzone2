{
  "name": "crackzone-backend",
  "version": "1.0.0",
  "description": "Backend API for CrackZone gaming platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "migrate:google": "node scripts/migrate-postgres-google-auth.js",
    "migrate:wallet": "node scripts/migrate-wallet.js",
    "migrate:profile": "node scripts/migrate-profile.js",
    "migrate:game-preferences": "node scripts/migrate-game-preferences.js",
    "migrate:security": "node scripts/migrate-security-tables.js",
    "migrate:all": "npm run migrate:security && npm run optimize:db",
    "setup:security": "node scripts/setup-security.js",
    "setup:production": "node scripts/setup-production.js",
    "test:security": "node scripts/test-security.js",
    "test:performance": "node scripts/quick-performance-test.js",
    "optimize:db": "node scripts/optimize-database.js",
    "monitor:performance": "node scripts/performance-monitor.js",
    "load-test": "artillery run load-test.yml",
    "load-test:light": "artillery run load-test.yml --config.phases.0.arrivalRate=10",
    "load-test:heavy": "artillery run load-test.yml --config.phases.0.arrivalRate=100",
    "load-test:stress": "artillery run load-test.yml --config.phases.0.arrivalRate=200",
    "deploy:railway": "railway deploy",
    "deploy:render": "echo 'Push to GitHub to trigger Render deployment'",
    "logs:production": "railway logs",
    "db:migrate:production": "railway run npm run migrate:all"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.35.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.0",
    "speakeasy": "^2.0.0",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "gaming",
    "tournaments",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}